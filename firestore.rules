rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users metadata doc (role routing)
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Patient profile
    match /patients/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Provider profiles
    match /providers_doctors/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    match /providers_diagnostic_centers/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    match /providers_pharmacies/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    match /providers_delivery_agents/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
